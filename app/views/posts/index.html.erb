<h1>ALL POSTS</h1>
<%= link_to "Create new post", new_post_path %>
<div class="posts-container">
  <% @posts.each do |post| %>  
    <div class="post">

      <%= link_to post do %>
        <h3> <%= post.title %> </h3>
      <% end %>
      <p><%= post.category.name %></p>
      <p><%= post.created_at %></p>
      <p><%= post.text %></p>
    </div>
  <% end %>
</div>